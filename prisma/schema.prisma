generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  full_name String
  password  String
  role      Role     @default(STUDENT)
  expert_in String?
  is_active Boolean
  // relation
  teacher_courses   Course[]
  enrollments Enroll[]
  results Result[]
  examParticipant ExamParticipant[] 

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Course {
  id         String   @id @default(uuid())
  title      String
  module     String
  teacher_id String
  //relation 
  teachers    User     @relation(fields: [teacher_id], references: [id])
  results    Result[]
  exams Exam[]
  enrollments Enroll[]
  examParticipant ExamParticipant[] 

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Enroll {
  id          String   @id @default(uuid())
  student_id     String
  course_id   String
  enrolled_at DateTime @default(now())
// relation 
  students User @relation(fields: [student_id] ,references: [id])
  courses Course @relation(fields: [course_id] , references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Exam {
  id          String   @id @default(uuid())
  title       String
  description String
  exam_date   DateTime @default(now())
  course_id    String
  // relation
  courses Course @relation(fields: [course_id] , references: [id])
  results     Result[]  
  examParticipant ExamParticipant[]     

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}


model ExamParticipant {
  id         String  @id @default(uuid())
  exam_id    String
  student_id String
  answer  String
  course_id   String

  // relation
  exams      Exam    @relation(fields: [exam_id], references: [id])
  students    User    @relation(fields: [student_id], references: [id])
  courses     Course  @relation(fields: [course_id], references: [id])
  result Result?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}



model Result {
  id         String  @id @default(uuid())
  marks      Int?
  status     Status @default(PENDING)
  exam_id    String
  student_id String
  course_id   String
  participant_id String @unique
  // relation
  exams      Exam    @relation(fields: [exam_id], references: [id])
  students    User    @relation(fields: [student_id], references: [id])
  courses     Course  @relation(fields: [course_id], references: [id])
  participant     ExamParticipant? @relation(fields: [participant_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

enum Status {
  PENDING
  FAILED
  PASSED
  ABSENT
}
